if (in_array($_GET['type'], array('repair_articlecats', 'rebuild_articlecats_paths', 'repair_articlecats_num')))
{
    $iaArticleCategory = $iaCore->factoryModule('articlecat', 'publishing', iaCore::ADMIN);

    switch ($_GET['type'])
    {
        case 'repair_articlecats':
            $iaArticleCategory->rebuildRelations();
            break;
        case 'rebuild_articlecats_paths':
            $iaArticleCategory->rebuildAliases();
            break;
        case 'repair_articlecats_num':
            $iaArticleCategory->calculateArticles();
